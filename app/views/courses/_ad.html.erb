<div class="course-thumb"> 
  
    <%= link_to edit_course_path(course), :class => "course-detail green-box-shadow" do %>  
  <%= image_tag course.poster_url, :id => 'adpost'%>
    <div class="course-info">
      <h4>
        <%= course.title %>
        <% if course.public %>
          <span class="private-label">发布的广告</span>
        <% end %>
      </h4>
      <p><%= course.description %></p>
    </div>
  <% end %>
  
  <div class="course-author">
    <%= course.user.mac  %>
  </div>

  <% if current_user && current_user == course.user %>
    <ul class="course-actions">
      <li><%= link_to t('edit'), edit_course_path(course) %></li>
      <li><%= link_to t('delete'), course, :confirm => t('confirm_delete'), :method => :delete %></li>
    </ul>
  <% end %>

</div>
